
@{
    ViewBag.Title = "Contacts";
    ViewBag.MenuCssContacts = "kt-menu__item--active active-red";
}

<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
    <div class="kt-subheader kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">
                <a href="@Url.Action("manage", "contactGroup")">
                    <i class="fa fa-arrow-circle-left"></i>
                </a> @ViewBag.GroupName
            </h3>
            <span class="kt-subheader__separator kt-hidden"></span>
        </div>
    </div>
    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head--lg m-t-20">
                <div class="col-md-8">
                    <div class="pull-left m-t-6 m-r-10">
                        <span class="action-icon icon-blue p-r-10">
                            <i class="fa fa-trash-alt m-l-3"></i>
                        </span>
                    </div>
                    <div class="pull-left m-t-6 m-r-10">
                        <a href="@Url.Action("import","contact", new { area = "admin", groupId=ViewBag.GroupId })">
                            <span class="action-icon icon-green">
                                <i class="fa fa-cloud-download-alt"></i>
                            </span>
                        </a>
                    </div>
                    <div class="pull-left m-r-10">
                        <button class="btn btn-primary" onclick="contactManageVm.openAddContactDialog()">
                            <i class="fa fa-plus"></i> Add Contact
                        </button>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="kt-input-icon kt-input-icon--right">
                        <input type="text" class="form-control input-search p-r-50" id="contactSearch">
                        <span class="kt-input-icon__icon kt-input-icon__icon--right">
                            <span>
                                <i class="fa fa-search"></i>
                            </span>
                        </span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="dropdown">
                        <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md tool-action-button" data-toggle="dropdown" aria-expanded="true">
                            <i class="la la-ellipsis-h"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <span class="dropdown-item cursor-pointer" onclick="contactManageVm.exportContacts()">
                                <i class="la la-cloud-upload"></i> Export Contacts
                            </span>
                            <span class="dropdown-item cursor-pointer" onclick="contactManageVm.openEditGroupDialog()">
                                <i class="la la-edit"></i> Edit Group
                            </span>
                            <span class="dropdown-item cursor-pointer" onclick="contactManageVm.deleteGroup()">
                                <i class="la la-trash"></i> Delete
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-hover table-checkable" id="grid-contacts"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hidGroupId" value="@ViewBag.GroupId" />
<input type="hidden" id="hidGroupName" value="@ViewBag.GroupName" />

@Html.Partial("_AddContactModal")
@Html.Partial("_EditContactModal")

@Html.Partial("_EditGroupModal")

@section scripts
{
    <script src="~/Areas/Admin/Scripts/App/contact.manage.js"></script>
}

